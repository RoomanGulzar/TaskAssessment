@using Microsoft.AspNetCore.Identity
@using TaskAssessment.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    var s =  (User.Identity.IsAuthenticated);

}
<ul class="navbar-nav">
    @if (s)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-action="Index" asp-controller="Employee">Employees</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-action="Logout" asp-controller="Auth">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-action="Register" asp-controller="Auth">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-action="Login" asp-controller="Auth">Login</a>
        </li>
    }
</ul>
